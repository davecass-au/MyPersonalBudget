        <div class="nav-item px-3">
            <NavLink class="nav-link" href="balancecorrections">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Balance Corrections
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="transfers">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Transfers
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
